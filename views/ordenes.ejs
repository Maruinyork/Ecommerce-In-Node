<!DOCTYPE html>
<html lang="es">

    <head>
        <%- include(`./partials/head`) %>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
            integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
        <link href="/css/style.css" rel="stylesheet" type="text/css">
    </head>

<body>
    <header>
        <%- include('./partials/navbar', {current: `formProductos`}) %>
    </header>

    <section class="vh-100 gradient-custom attention">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-12">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <h3 class="fw-bold mb-2 text-uppercase">órdenes de compra:</h3>
                            <br>
                            <br> 
                            <% if (allOrdenes.length <=0 && userLog.admin) { %>
                                <p>No hay ordenes:(</p>
                                <% } else { %>
                                    
                                    <% allOrdenes.forEach(orden=>{ %>
                                    <table class="table table-danger">
                                        <thead>
                                            <tr>
                                                <th scope="col">ID Orden</th>
                                                <th scope="col">Comprador</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <h5 class="fw-bold mb-2 text-uppercase">Datos del comprador:</h5>
                                                <tr>
                                                    <td>
                                                        <%= orden._id %>
                                                    </td>
                                                    <td>
                                                        <%= orden.owner[1] %>
                                                    </td>
                                                            <table class="table table-danger">
                                                                <br>
                                                                <br>
                                                                <h5 class="fw-bold mb-2 text-uppercase">Detalle de la orden:</h5>
                                                                <thead>
                                                                    <tr>
                                                                        <th scope="col">Código</th>
                                                                        <th scope="col">Cantidad</th>
                                                                        <th scope="col">Nombre</th>
                                                                        <th scope="col">Descripcion</th>
                                                                        <th scope="col">Precio</th>
                                                                        <th scope="col">Imagen</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <% orden.products.forEach(producto=>{ %>
                                                                        <tr>
                                                                            <td>
                                                                                <%= producto._id %>
                                                                            </td>
                                                                            <td>
                                                                                1
                                                                            </td>
                                                                            <td>
                                                                                <%= producto.nombre %>
                                                                            </td>
                                                                            <td>
                                                                                <%= producto.descripcion %>
                                                                            </td>
                                                                            <td>
                                                                                <%= producto.precio %>
                                                                            </td>
                                                                            <td>
                                                                                <img src="<%= producto.thumbnail %>" width="60" height="60">
                                                                            </td>
                                                                        </tr>
                                                                    <% }) %>
                                                                </tbody>
                                                            </table>
                                                            <p class="text-secondary text-center mt-5">-------------------------------------------------------------------------------------------------------------------------------------</p>
                                                <br>
                                                <br>
                                                <br>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
