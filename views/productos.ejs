<!DOCTYPE html>
<html lang="es">

<head>
    <%- include(`./partials/head`) %>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
            integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
</head>

<script>
    const deleteProductById = async (id) => {
        const response = await fetch(`/api/productos/${id}`, {
            headers: {
                'Content-Type': 'application/json'
            },
            method: 'DELETE',
        })
            .then(_ => {
                window.location.href = "/api/productos";
            });
    }
</script>

<body>
    <header>
        <%- include('./partials/navbar', {current: `formProductos`}) %>
    </header>

    <section class="attention">
        <div class="board">
                        <div class="card-body p-5 text-center">
                            <h3 class="fw-bold mb-2 text-uppercase">Cat√°logo de productos</h3>
                            <br>
                            
                            <% if (allProductsDTO.length <=0) { %>
                                <p>No se encontraron datos :(</p>
                                <% } else { %>
                                    <table class="table">
                                        <img src="https://farmacityar.vteximg.com.br/arquivos/ids/182742/Landing-Premium-2400x800.jpg?v=636800732447170000" class="img-fluid" alt="banner">
                                        <thead>
                                            <tr>
                                                <th scope="col">Nombre</th>
                                                <th scope="col">Precio</th>
                                                <th scope="col">Categor√≠a</th>
                                                <th scope="col">Imagen</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% allProductsDTO.forEach(product=>{ %>
                                                <tr>
                                                    <td>
                                                        <%= product.nombre %>
                                                    </td>
                                                    <td>
                                                        $<%= product.precio %>
                                                    </td>
                                                    <td>
                                                        <%= product.categoria %>
                                                    </td>
                                                    <td>
                                                        <img src="<%= product.thumbnail %>" width="80" height="80">
                                                    </td>
                                                    <td>
                                                        <form action="/api/productos/<%= product.id %>" method="GET">
                                                            <button class="btn btn-pink" type="submit">
                                                                ver 
                                                            </button>
                                                        </form>
                                                    </td>
                                                    <td>
                                                        <form action="/api/carrito/addProduct" method="POST">
                                                            <input type="hidden" name="idUser" value=<%=userLog._id %> />
                                                            <input type="hidden" name="idProduct" value=<%=product.id %> />
                                                            <button class="btn btn-dark" type="submit">
                                                                ü§é Agregar al carrito
                                                            </button>
                                                        </form>
                                                    </td>
                                                    
                                                    <% if(userLog.admin) { %>
                                                        
                                                    <td>
                                                        <form action="/api/productos/modificar" method="POST">
                                                            <input type="hidden" name="idProduct" value=<%= product.id %> />
                                                            <input type="hidden" name="nameProduct" value=<%= product.nombre  %> />
                                                            <input type="hidden" name="descripcionProduct" value=<%= product.descripcion %> />
                                                            <input type="hidden" name="precioProducto" value=<%= product.precio %> />
                                                            <input type="hidden" name="categoryProduct" value=<%= product.categoria %> />
                                                            <input type="hidden" name="linkProduct" value=<%= product.thumbnail %> />
                                                            <button class="btn"type="submit">
                                                                <img src="https://cdn-icons-png.flaticon.com/512/7797/7797944.png" height="38" width="38">
                                                            </button>
                                                        </form>
                                                    </td>
                                                        <td>
                                                            <button class="btn"
                                                                onclick="deleteProductById(`<%= product.id %>`)"><img src="https://cdn-icons-png.flaticon.com/512/7993/7993856.png" height="32" width="32" </button>
                                                        </td>
                                                        <% } %>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <footer>
        <%- include('./partials/footer') %>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>