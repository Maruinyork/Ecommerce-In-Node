<!DOCTYPE html>
<html lang="es">

<head>
  <%- include(`./partials/head`) %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
      integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link href="/css/style.css" rel="stylesheet" type="text/css">
</head>

<body>
  <header>
    <%- include('./partials/header') %>
  </header>

  <section class="board bg-light mt-5 d-flex justify-content-center">
    <div class="chat_board py-4 bg-light h-100">
      <div class="d-flex justify-content-center align-items-center h-100">
          <div class="card bg-light" style="border-radius: 1rem;">
            <div class="card-body text-center">
              <div class="mb-md-5 mt-md-4">
                <form method="POST" action="/login">
                  <h2 class="fw-bold mb-2">Iniciar Sesión</h2>
                  <div class=" form-group form-outline form-white mb-4">
                    <label class="form-label" for="typeEmailX">Usuario</label>
                    <input type="text" id="typeEmailX" name="username" class="form-control form-control-md" required minlength="3" />
                  </div>
                  <div class="form-outline form-white mb-4">
                    <label class="form-label" for="typeEmailX">Contraseña</label>
                    <input type="password" id="typeEmailX" name="password" class="form-control form-control-md" required minlength="3" />
                  </div>
                  <button class="btn btn-danger mx-auto px-3" type="submit">Entrar</button>
                  <a class="btn btn-dark" href="/signup">Crear Cuenta</a>
                </form>
              </div>

            </div>
          </div>
      </div>
    </div>
  </section>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>