<!DOCTYPE html>
<html lang="es">

<head>
    <%- include(`./partials/head`) %>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
            integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
</head>

<body>
    <header>
        <%- include('./partials/navbar', {current: `formProductos`}) %>
    </header>

    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-12">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <h3 class="fw-bold mb-2 text-uppercase">Productos disponibles - filtrado por categoria</h3>
                            <br>
                            
                            <% if (allProductsDTO.length <=0) { %>
                                <p>No hay productos disponibles:(</p>
                                <% } else { %>
                                    <table class="table table-dark">
                                        <thead>
                                            <tr>
                                                <th scope="col">Nombre</th>
                                                <th scope="col">Descripcion</th>
                                                <th scope="col">Precio</th>
                                                <th scope="col">Categor√≠a</th>
                                                <th scope="col">Imagen</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% allProductsDTO.forEach(product=>{ %>
                                                <tr>
                                                    <td>
                                                        <%= product.nombre %>
                                                    </td>
                                                    <td>
                                                        <%= product.descripcion %>
                                                    </td>
                                                    <td>
                                                        $<%= product.precio %>
                                                    </td>
                                                    <td>
                                                        <%= product.categoria %>
                                                    </td>
                                                    <td>
                                                        <img src="<%= product.thumbnail %>" width="60" height="60">
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <footer>
        <%- include('./partials/footer') %>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>